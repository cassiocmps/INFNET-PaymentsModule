@page
@model PaymentsModule.Client.Pages.RefundModel
@{
    ViewData["Title"] = "Refund Payment";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0"><i class="fas fa-undo me-2"></i>Refund Payment</h4>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(Model.Message))
                {
                    <div class="alert @(Model.IsSuccess ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
                        <i class="fas @(Model.IsSuccess ? "fa-check-circle" : "fa-exclamation-triangle") me-2"></i>
                        @Model.Message
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <p class="text-muted mb-4">
                    <i class="fas fa-info-circle me-2"></i>
                    Process a refund for an existing payment. Bank account information is required if its not a credit card payment.
                </p>

                <form method="post">
                    <div class="row mb-3">
                        <div class="col-md-8">
                            <label for="PaymentId" class="form-label">Payment ID</label>
                            <input asp-for="Request.PaymentId" class="form-control" id="PaymentId" placeholder="Enter the payment ID to refund" />
                            <span asp-validation-for="Request.PaymentId" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 d-flex align-items-end">
                            <button type="button" class="btn btn-outline-secondary" onclick="generateGuid('PaymentId')">
                                <i class="fas fa-random me-1"></i>Generate
                            </button>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label for="Reason" class="form-label">Refund Reason</label>
                        <textarea asp-for="Request.Reason" class="form-control" id="Reason" rows="3" placeholder="Explain the reason for this refund..."></textarea>
                        <span asp-validation-for="Request.Reason" class="text-danger"></span>
                    </div>

                    <div class="card border-secondary mb-4">
                        <div class="card-header bg-light">
                            <h6 class="mb-0">
                                <button type="button" class="btn btn-link text-decoration-none p-0" data-bs-toggle="collapse" data-bs-target="#bankAccountSection" aria-expanded="false">
                                    <i class="fas fa-university me-2"></i>Bank Account Information (Optional)
                                    <i class="fas fa-chevron-down ms-2"></i>
                                </button>
                            </h6>
                        </div>
                        <div class="collapse" id="bankAccountSection">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="Bank" class="form-label">Bank</label>
                                        <input asp-for="Request.BankAccount.Bank" class="form-control" id="Bank" placeholder="Bank name" />
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="Agency" class="form-label">Agency</label>
                                        <input asp-for="Request.BankAccount.Agency" class="form-control" id="Agency" placeholder="Agency number" />
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="AccountNumber" class="form-label">Account Number</label>
                                        <input asp-for="Request.BankAccount.AccountNumber" class="form-control" id="AccountNumber" placeholder="Account number" />
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="AccountType" class="form-label">Account Type</label>
                                        <select asp-for="Request.BankAccount.AccountType" class="form-select" id="AccountType">
                                            <option value="">Select account type...</option>
                                            <option value="Checking">Checking Account</option>
                                            <option value="Savings">Savings Account</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="HolderName" class="form-label">Account Holder Name</label>
                                    <input asp-for="Request.BankAccount.HolderName" class="form-control" id="HolderName" placeholder="Full name of account holder" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <button type="submit" class="btn btn-danger btn-lg">
                            <i class="fas fa-undo me-2"></i>Process Refund
                        </button>
                    </div>
                </form>

                @if (Model.RefundResponse != null)
                {
                    <hr class="my-4">
                    <div class="card border-success">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0"><i class="fas fa-check-circle me-2"></i>Refund Processed Successfully</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <p><strong>Refund ID:</strong> @Model.RefundResponse.Id</p>
                                    <p><strong>Amount:</strong> $@Model.RefundResponse.Amount.ToString("F2")</p>
                                    <p><strong>Refund Date:</strong> @Model.RefundResponse.RefundDate.ToString("yyyy-MM-dd HH:mm:ss")</p>
                                </div>
                                <div class="col-md-6">
                                    <p><strong>Reason:</strong></p>
                                    <p class="text-muted">@Model.RefundResponse.Reason</p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function generateGuid(fieldId) {
            const guid = 'xxxxxxxx-xxxx-4xxx-yxxx-xxxxxxxxxxxx'.replace(/[xy]/g, function(c) {
                const r = Math.random() * 16 | 0;
                const v = c === 'x' ? r : (r & 0x3 | 0x8);
                return v.toString(16);
            });
            document.getElementById(fieldId).value = guid;
        }
    </script>
    <partial name="_ValidationScriptsPartial" />
}